<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_edittext.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:shape="rectangle" >

    <solid android:color="@color/lsdk_gray_background" />
    <padding android:left="@dimen/edittext_padding"
        android:right="@dimen/edittext_padding"
        android:top="@dimen/edittext_padding"
        android:bottom="@dimen/edittext_padding"/>

    <corners
        android:bottomLeftRadius="@dimen/corner_radius"
        android:bottomRightRadius="@dimen/corner_radius"
        android:topLeftRadius="@dimen/corner_radius"
        android:topRightRadius="@dimen/corner_radius" />
    
    <stroke android:width="1dp" android:color="@color/lsdk_edittext_stroke"/>
</shape>