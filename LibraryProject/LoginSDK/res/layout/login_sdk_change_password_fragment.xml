<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:extraproperty="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayoutChangePassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lsdk_white" >

    <RelativeLayout
        android:id="@+id/relativeLayoutHeaderChangePass"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/lsdk_defaultHeaderColor"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/imageViewChangePassBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/imageContentDesc"
            android:src="@drawable/lsdk_icon_ustbar_back" />

        <ImageView
            android:id="@+id/imageViewChangePassLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="4dp"
            android:contentDescription="@string/imageContentDesc"
            android:src="@drawable/lsdk_icon_ustbar_turkcellcircle" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBaseChangePassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayoutHeaderChangePass"
        android:background="@color/lsdk_white"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollViewChangePass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/linearLayoutNormalLogin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/lsdk_defaultHeaderColor"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="5dp" >

                        <com.turkcell.loginsdk.helper.LoginSDKFontTextView
                            android:id="@+id/textViewHeaderLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text="@string/lsdkchangePasswordHeader"
                            android:textColor="@color/lsdk_white"
                            android:textSize="20sp"
                            extraproperty:loginSDKCustomFont="Turkcell_Satura_Bold.ttf" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutChangePass"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <com.turkcell.loginsdk.helper.LoginSDKFontEdittext
                        android:id="@+id/editTextChangePassMsisdn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/shape_rounded_edittext_background_gray"
                        android:digits="@string/allowedCharactersPhoneEdit"
                        android:ellipsize="end"
                        android:ems="11"
                        android:gravity="left"
                        android:hint="@string/loginNormalLoginMsisdnHint"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:textColor="@color/lsdk_gray1"
                        android:textSize="20sp"
                        android:visibility="gone"
                        extraproperty:loginSDKCustomFontEdit="Turkcell_Satura_Demi.ttf" >
                    </com.turkcell.loginsdk.helper.LoginSDKFontEdittext>

                    <com.turkcell.loginsdk.helper.LoginSDKFontEdittext
                        android:id="@+id/editTextChangePassOld"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/shape_rounded_edittext_background_gray"
                        android:digits="@string/allowedCharactersPhoneEdit"
                        android:ellipsize="end"
                        android:ems="11"
                        android:gravity="left"
                        android:hint="@string/changePassOldPassHint"
                        android:inputType="textPassword"
                        android:maxLength="11"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:textColor="@color/lsdk_gray1"
                        android:textSize="20sp"
                        extraproperty:loginSDKCustomFontEdit="Turkcell_Satura_Demi.ttf" >
                    </com.turkcell.loginsdk.helper.LoginSDKFontEdittext>

                    <com.turkcell.loginsdk.helper.LoginSDKFontEdittext
                        android:id="@+id/editTextChangePassNew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/shape_rounded_edittext_background_gray"
                        android:digits="@string/allowedCharactersPhoneEdit"
                        android:ellipsize="end"
                        android:ems="11"
                        android:gravity="left"
                        android:hint="@string/changePassNewPassHint"
                        android:inputType="textPassword"
                        android:maxLength="11"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:textColor="@color/lsdk_gray1"
                        android:textSize="20sp"
                        extraproperty:loginSDKCustomFontEdit="Turkcell_Satura_Demi.ttf" >
                    </com.turkcell.loginsdk.helper.LoginSDKFontEdittext>

                    <com.turkcell.loginsdk.helper.LoginSDKFontEdittext
                        android:id="@+id/editTextChangePassNewRe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/shape_rounded_edittext_background_gray"
                        android:digits="@string/allowedCharactersPhoneEdit"
                        android:ellipsize="end"
                        android:ems="11"
                        android:gravity="left"
                        android:hint="@string/changePassNewPassAgainHint"
                        android:inputType="textPassword"
                        android:maxLength="11"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:textColor="@color/lsdk_gray1"
                        android:textSize="20sp"
                        extraproperty:loginSDKCustomFontEdit="Turkcell_Satura_Demi.ttf" >
                    </com.turkcell.loginsdk.helper.LoginSDKFontEdittext>

                    <LinearLayout
                        android:id="@+id/linearChangePasswordCaptcha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/imageviewChangePasswordCaptcha"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_weight="0.50"
                                android:contentDescription="@string/imageContentDesc" />

                            <ImageView
                                android:id="@+id/imageviewChangePasswordCaptchaRefresh"
                                android:layout_width="30dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="0.10"
                                android:background="@drawable/shape_rounded_background"
                                android:contentDescription="@string/imageContentDesc"
                                android:src="@drawable/lsdk_icon_refresh" />
                        </LinearLayout>

                        <com.turkcell.loginsdk.helper.LoginSDKFontEdittext
                            android:id="@+id/editTextChangePasswordCaptcha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/shape_rounded_edittext_background_gray"
                            android:ellipsize="end"
                            android:ems="10"
                            android:gravity="left"
                            android:hint="@string/loginNormalLoginCapthchaHint"
                            android:inputType="phone"
                            android:maxLength="15"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:singleLine="true"
                            android:textColor="@color/lsdk_gray1"
                            android:textSize="20sp"
                            extraproperty:loginSDKCustomFontEdit="Turkcell_Satura_Demi.ttf" />
                    </LinearLayout>

                    <com.turkcell.loginsdk.helper.LoginSDKFontTextView
                        android:id="@+id/buttonChangePassword"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:text="@string/changePasswordChange"
                        android:textColor="@color/lsdk_black"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>