<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutBaseLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lsdk_white">


    <include
        android:id="@+id/lsdkHeader"
        layout="@layout/login_sdk_header" />


    <LinearLayout
        android:id="@+id/linearLayoutBaseLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lsdkHeader"
        android:background="@color/lsdk_white"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollViewLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/linearLayoutNormalLoginBase"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <com.turkcell.loginsdk.helper.LoginSDKFontEdittext
                        android:id="@+id/editTextNormalLoginMsisdn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape_rounded_edittext_without_background"
                        android:digits="@string/allowedCharactersPhoneEdit"
                        android:ellipsize="end"
                        android:ems="11"
                        android:gravity="left"
                        android:hint="@string/loginNormalLoginMsisdnHint"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:textColor="@color/lsdk_gray1"
                        android:textSize="20sp" />

                    <com.turkcell.loginsdk.helper.LoginSDKFontEdittext
                        android:id="@+id/editTextNormalLoginPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/shape_rounded_edittext_without_background"
                        android:ellipsize="end"
                        android:ems="10"
                        android:gravity="left"
                        android:hint="@string/loginNormalLoginPasswordHint"
                        android:inputType="textPassword"
                        android:maxLength="15"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:textColor="@color/lsdk_gray1"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:id="@+id/linearLloginPasswordCaptcha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageviewloginPasswordCaptcha"
                                android:layout_width="wrap_content"
                                android:layout_height="62dp"
                                android:layout_weight="0.85"
                                android:contentDescription="@string/imageContentDesc"
                                android:gravity="left|center_vertical" />

                            <ImageView
                                android:id="@+id/imageviewloginPasswordCaptchaRefresh"
                                android:layout_width="30dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="0.10"
                                android:background="@drawable/shape_rounded_background"
                                android:contentDescription="@string/imageContentDesc"
                                android:src="@drawable/lsdk_icon_refresh" />
                        </LinearLayout>

                        <com.turkcell.loginsdk.helper.LoginSDKFontEdittext
                            android:id="@+id/editTextCaptcha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/shape_rounded_edittext_without_background"
                            android:ellipsize="end"
                            android:ems="10"
                            android:focusableInTouchMode="true"
                            android:gravity="left"
                            android:hint="@string/loginNormalLoginCapthchaHint"
                            android:inputType="phone"
                            android:maxLength="15"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:singleLine="true"
                            android:textColor="@color/lsdk_gray1"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="15dp"
                        android:gravity="left">

                        <com.turkcell.loginsdk.helper.LoginSDKFontCheckBox
                            android:id="@+id/checkBoxNormalLoginRememberMe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:button="@drawable/lsdk_selector_rememberme_checkbox"
                            android:clickable="true"
                            android:textSize="16sp" />

                        <com.turkcell.loginsdk.helper.LoginSDKFontTextView
                            android:id="@+id/checkBoxNormalLoginRememberMeHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="4dp"
                            android:layout_toEndOf="@+id/checkBoxNormalLoginRememberMe"
                            android:layout_toRightOf="@+id/checkBoxNormalLoginRememberMe"
                            android:text="@string/loginRemindMe"
                            android:textColor="@color/lsdk_gray1" />
                    </RelativeLayout>

                    <com.turkcell.loginsdk.helper.LoginSDKFontTextView
                        android:id="@+id/buttonNormalLoginSignIn"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:text="@string/loginNormalLoginSignIn"
                        android:textColor="@color/lsdk_black"
                        android:textSize="18sp" />

                    <com.turkcell.loginsdk.helper.LoginSDKFontTextView
                        android:id="@+id/buttonNormalLoginForgotUser"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:text="@string/loginNormalLoginForgotUser"
                        android:textColor="@color/lsdk_black"
                        android:textSize="18sp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/relativeLayoutPasswordField"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="35dp">

                        <com.turkcell.loginsdk.helper.LoginSDKFontTextView
                            android:id="@+id/buttonTakePassword"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@+id/dividerPass"
                            android:drawableLeft="@drawable/lsdk_icon_forgotpass"
                            android:drawablePadding="5dip"
                            android:gravity="center|left"
                            android:text="@string/loginNormalLoginForgotPass"
                            android:textColor="@color/lsdk_black"
                            android:textSize="18sp" />

                        <com.turkcell.loginsdk.helper.LoginSDKFontTextView
                            android:id="@+id/buttonForgotPassword"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="40dp"
                            android:layout_toLeftOf="@+id/dividerPass"
                            android:drawableLeft="@drawable/lsdk_icon_sifre"
                            android:drawablePadding="5dip"
                            android:gravity="center|left"
                            android:text="@string/loginNormalLoginTakePass"
                            android:textColor="@color/lsdk_black"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/dividerPass"
                            android:layout_width="2dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@color/lsdk_white246"
                            android:contentDescription="@string/imageContentDesc"
                            android:gravity="center" />

                        <com.turkcell.loginsdk.helper.LoginSDKFontTextView
                            android:id="@+id/buttonChangePassword"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/dividerPass"
                            android:drawableLeft="@drawable/lsdk_icon_changepass"
                            android:gravity="center"
                            android:text="@string/loginNormalLoginChangePass"
                            android:textColor="@color/lsdk_black"
                            android:textSize="18sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp">

                        <com.turkcell.loginsdk.helper.LoginSDKFontTextView
                            android:id="@+id/buttonFreeText"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="@string/tcell_account_name"
                            android:textColor="@color/lsdk_black"
                            android:textSize="18sp"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>